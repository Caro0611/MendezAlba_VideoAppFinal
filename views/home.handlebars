<section id="app">


  <div class="movie-wrapper">
    <aside>
      <h4 class="movie-title">{{ defaultMovie.movies_title }}</h4>
      <span class="movie-year">
        {{ defaultMovie.movies_year }} &nbsp;&bull;&nbsp; {{ defaultMovie.movies_runtime }}
      </span>
      <i class="movie-genre"> {{ defaultMovie.genre_name }}</i>
    </aside>

    <video autoplay controls>
      <source src="video/{{ defaultMovie.movies_trailer }}" type="video/mp4">
    </video>
  </div>

  
  <div class="filter-section">
    <h3 class="filter-section__title">Search</h3>
    <select v-model="searchCategory">
        <option value="all">All</option>
        <option value="Family">Family</option>
        <option value="Action">Action</option>
        <option value="Fantasy">Fantasy</option>
    </select>
    

    <input type="text" v-model="searchMovie" placeholder="&#128270; Movie">  
  </div>
  
  <!-- load in all of the thumnails for each genre -->
  <div class="wrapper-genre-lists">
    <section class="genre-lists" v-for="genre in filteredCategoryMovies">
      <div  v-if="genre.movies.length > 0">
        <div class="genre-item">
          <h6 class="genre-name">${ genre.name }</h6>
          <div class="movie-list" v-for="movie in filterMovieByName(genre.movies)">
            <a class="movie" :href="'/movies/' + movie.movies_id + '/' + movie.movies_trailer">
              <img class="movie-thumb" :src="'images/' + movie.movies_cover" :alt="movie.movies_title">
              <div class="movie-name">${movie.movies_title}</div>
            </a>
          </div>
        </div>
      </div>
    </section>
  </div>
</section>
